# Server
PORT=8080
ENVIRONMENT=development

# Database
DATABASE_PATH=./gassigeher.db

# JWT
JWT_SECRET=development-secret-change-in-production
JWT_EXPIRATION_HOURS=24

# Admin Emails (comma-separated)
ADMIN_EMAILS=admin@gassigeher.com,admin@tierheim-goeppingen.de

# Gmail API (you need to configure these with your own credentials)
# Get these from Google Cloud Console: https://console.cloud.google.com/
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_FROM_EMAIL=noreply@gassigeher.com

# Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=5

# System Settings
BOOKING_ADVANCE_DAYS=14
CANCELLATION_NOTICE_HOURS=12
AUTO_DEACTIVATION_DAYS=365
